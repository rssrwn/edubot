<div class="levelDiv">
  <span class="nameDiv">
    {{#if locked}}
    <span class="inlineDiv">
      <img class="lockImage", alt="lock", src="../images/lock.png">
      <a class="linkLocked">Level {{number}} - {{name}}</a>
    </span>
    {{else}}
    <span class="inlineDiv">
      <a class="linkPlain hoverLink playLink" href="{{link}}">Play</a>
      <a class="linkPlain hoverLink" href="{{link}}">Level {{number}} - {{name}}</a>
    {{/if}}
    </span>
  </span>
  {{#if stars}}
  <span class="starsDiv">
    {{#for 0 stars 1}}
      <img class="starImage", alt="star", src="../../images/star_filled.png">
    {{/for}}
    {{#for stars 3 1}}
      <img class="starImage", alt="star", src="../../images/star_empty.png">
    {{/for}}
  </span>
  {{/if}}
</div>